package Logica;
import java.sql.ResultSet;

public class Adminstrador extends Persona{

	private int claveA;

	public Adminstrador(String nombre, String apellido,
			String dni, String id, String contrasena, String tipo_cuenta) {
		super(nombre, apellido, dni, id, contrasena);
	}
	
	public int getClaveA() {
		return claveA;
	}

	public void setClaveA(int claveA) {
		this.claveA = claveA;
	}

	public boolean verEmpleados() {
		
		String sql = "SELECT empleado.idempleado,persona.nombre,persona.apellido,persona.dni,empleado_tipo.Nombre,empleado.is_despedido clase FROM `empleado` INNER JOIN empleado_tipo on empleado_tipo.idempleado_tipo = empleado.empleado_tipo_idempleado_tipo INNER JOIN persona on Persona.idPersona=empleado.Persona_idPersona";
		String[] datos = new String[5];
		try {

			stmt = conexion.prepareStatement(sql);
			
			ResultSet result = stmt.executeQuery();
			
			while (result.next()) {
				datos[0] = String.valueOf(result.getInt(1));
				datos[1] = result.getString(2);
				datos[2] = result.getString(3);
				datos[3] = String.format("%.0f", result.getFloat(4));
				datos[4] = result.getString(5);
				datos[5] = result.getString(6);

				this.setId(datos[0]);
				this.setNombre(datos[1]);
				this.setApellido(datos[2]);
				this.setDni(datos[3]);
				this.setTipo_cuenta(datos[4]);
				conexion.close();
				
				this.clave=clave;
				return true;
			}

			return false;

		} catch (Exception excepcion) {
			System.out.println(excepcion.getMessage());
			return false;
		}

	}
	public void despedirEmpleado() {
		
	}
}
